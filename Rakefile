require 'gemstub'

Gemstub.test_framework = :rspec

Gemstub.gem_spec do |s|
  s.description = "A gem to download the contents of a page and include them into your application."
  s.version = "0.1.0"
  s.rubyforge_project = "magrathea"
  s.add_dependency('nokogiri')
  s.add_dependency('configatron')
  s.add_dependency('cachetastic')
end

Gemstub.rdoc do |rd|
  rd.title = "Content O'Matic"
end
